<Window x:Class="COSC2100_A2_MaxDinsmore.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COSC2100_A2_MaxDinsmore"
        mc:Ignorable="d"
        Title="Game" 
        Height="450" Width="800"
        MinHeight="400" MinWidth="600"
        SizeChanged="Window_SizeChanged"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Canvas x:Name="canvasGameBoard" HorizontalAlignment="Left" Grid.Column="0"
                Height="430" VerticalAlignment="Center" Width="430" 
        />
        <!-- Re add binding code to fix canvas as a square -->
        <Grid>
            
        </Grid>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Margin="0,0,0,367">
            <Label x:Name="labelPlayersTurn" Content="Label" Margin="0,0,0,-1"/>
        </Border>
    </Grid>
</Window>
